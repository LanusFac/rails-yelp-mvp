<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  </head>

  <body>
  <div class="container d-flex justify-content-between" style="margin-top: 30px; margin-bottom: 10px">
    <%= link_to "Back to index", restaurants_path, class: "btn btn-primary" %>
    <%= link_to "Create new restaurant", new_restaurant_path, class: "btn btn-outline-secondary" %>
  </div>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
